@require "../mixins/typography"

body
  width 100vw
  height 100dvh
  display grid
  grid-template-rows auto 1fr auto
  justify-content center
  justify-items center

body > header

  width inherit
  padding 1rem
  border-bottom 1px solid var(--primary-accent)

  .logo
    svg
      height 2rem

body > main

  overflow auto
  display flex
  flex-flow column
  justify-content center
  width inherit
  padding 1rem
  gap 1rem

body > footer

  width inherit
  padding 1rem
  display flex
  justify-content center
  border-top 1px solid var(--primary-accent)

  smallest()
