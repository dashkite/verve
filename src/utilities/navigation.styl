.button
  display flex
  justify-content center
  align-items center
  padding 1rem
  color var(--background)
  background-color var(--highlight)
  border 1px solid var(--highlight)
  border-radius 0.5rem
  min-width 8rem

  &:focus-visible
    outline 1px solid var(--accent)
    outline-offset 1px  